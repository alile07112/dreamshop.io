<body>
    <div class="container">
        <div class="logo">
            <h1>üõí DREAM SHOP</h1>
            <p>BOT POUR COMMANDER HASH-WEED-CALI<br>SUPPORT: @DREAMSHOP390</p>
        </div>

        <!-- Admin Panel -->
        <div class="admin-panel" id="adminPanel">
            <button class="btn admin-btn" onclick="showAddStock()">‚ûï Recharger le stock</button>
        </div>

        <!-- Category Selection -->
        <div id="categoryView">
            <div class="category-buttons">
                <button class="btn btn-hash" onclick="showProducts('hash')">HASH üç´</button>
                <button class="btn btn-weed" onclick="showProducts('weed')">WEED üå±</button>
            </div>
        </div>

        <!-- Products View -->
        <div id="productsView" style="display: none;">
            <button class="back-btn" onclick="showHome()">‚Üê Retour</button>
            <h2 id="categoryTitle" style="margin-bottom: 20px;"></h2>
            <div class="products-grid" id="productsGrid"></div>
        </div>

        <!-- Price Modal -->
        <div id="priceModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('priceModal')">&times;</span>
                <h2 id="priceModalTitle"></h2>
                <div class="price-list" id="priceList"></div>
                <button class="btn-submit" onclick="showOrderFromPrice()">üõí Commander</button>
            </div>
        </div>

        <!-- Order Modal -->
        <div id="orderModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('orderModal')">&times;</span>
                <h2 id="orderModalTitle"></h2>
                <div class="weight-buttons" id="weightButtons"></div>
            </div>
        </div>

        <!-- Address Modal -->
        <div id="addressModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('addressModal')">&times;</span>
                <h2>üìç Informations de livraison</h2>
                <textarea id="addressInput" placeholder="üè† Adresse compl√®te (num√©ro, rue, ville, code postal)" rows="3"></textarea>
                <input type="tel" id="phoneInput" placeholder="üìû Num√©ro de t√©l√©phone">
                <button class="btn-submit" onclick="submitOrder()">‚úÖ Confirmer la commande</button>
            </div>
        </div>

        <!-- Add Stock Modal -->
        <div id="addStockModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal('addStockModal')">&times;</span>
                <h2>‚ûï Ajouter un produit</h2>
                <select id="stockCategory" style="padding: 15px; margin: 10px 0; width: 100%; border-radius: 10px;">
                    <option value="hash">HASH üç´</option>
                    <option value="weed">WEED üå±</option>
                </select>
                <input type="text" id="productName" placeholder="üìù Nom du produit">
                <input type="text" id="productImage" placeholder="üñºÔ∏è URL de l'image">
                <input type="text" id="productPrices" placeholder="üí∞ Prix (ex: 5,10,15,20,25)">
                <input type="text" id="productWeights" placeholder="‚öñÔ∏è Poids en g (ex: 1,2,3,4,5)">
                <input type="number" id="productStock" placeholder="üì¶ Stock total en grammes">
                <button class="btn-submit" onclick="addProduct()">‚úÖ Ajouter au stock</button>
            </div>
        </div>
    </div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();

        const ADMIN_ID = 8470082934;
        let currentUser = tg.initDataUnsafe?.user;
        let currentProduct = null;
        let currentCategory = null;
        let selectedWeight = null;
        let selectedPrice = null;

        // Stock data
        let stock = {
            hash: [],
            weed: []
        };

        // Load stock from storage
        function loadStock() {
            const saved = localStorage.getItem('dreamshop_stock');
            if (saved) {
                stock = JSON.parse(saved);
            }
        }

        function saveStock() {
            localStorage.setItem('dreamshop_stock', JSON.stringify(stock));
        }

        // Initialize
        function init() {
            loadStock();
            if (currentUser && currentUser.id === ADMIN_ID) {
                document.getElementById('adminPanel').style.display = 'block';
            }
            tg.ready();
        }

        function showHome() {
            document.getElementById('productsView').style.display = 'none';
            document.getElementById('categoryView').style.display = 'block';
        }

        function showProducts(category) {
            currentCategory = category;
            const products = stock[category];
            
            if (products.length === 0) {
                tg.showAlert(`üï∏Ô∏è Aucun produit dans la cat√©gorie ${category.toUpperCase()} pour le moment.`);
                return;
            }

            document.getElementById('categoryView').style.display = 'none';
            document.getElementById('productsView').style.display = 'block';
            document.getElementById('categoryTitle').textContent = category.toUpperCase() + (category === 'hash' ? ' üç´' : ' üå±');

            const grid = document.getElementById('productsGrid');
            grid.innerHTML = '';

            products.forEach((product, index) => {
                const card = document.createElement('div');
                card.className = 'product-card';
                card.innerHTML = `
                    <img src="${product.image}" class="product-image" onerror="this.src='https://via.placeholder.com/400x250?text=Produit'">
                    <div class="product-name">üì¶ ${product.name}</div>
                    <div class="product-actions">
                        <button class="btn-action btn-prices" onclick="showPrices('${category}', ${index})">üí∞ Prix</button>
                        <button class="btn-action btn-order" onclick="showOrder('${category}', ${index})">üõí Commander</button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function showPrices(category, index) {
            const product = stock[category][index];
            currentProduct = { category, index, product };

            document.getElementById('priceModalTitle').textContent = `üí® ${product.name}`;
            
            const list = document.getElementById('priceList');
            list.innerHTML = '';
            
            product.weights.forEach((weight, i) => {
                const price = product.prices[i];
                const item = document.createElement('div');
                item.className = 'price-item';
                item.textContent = `‚öñÔ∏è ${weight}g ‚Üí ${price}‚Ç¨`;
                list.appendChild(item);
            });

            document.getElementById('priceModal').style.display = 'block';
        }

        function showOrderFromPrice() {
            closeModal('priceModal');
            showOrder(currentProduct.category, currentProduct.index);
        }

        function showOrder(category, index) {
            const product = stock[category][index];
            currentProduct = { category, index, product };

            document.getElementById('orderModalTitle').textContent = `‚öñÔ∏è Choisis ton poids pour ${product.name}`;
            
            const buttons = document.getElementById('weightButtons');
            buttons.innerHTML = '';
            
            product.weights.forEach((weight, i) => {
                const price = product.prices[i];
                const btn = document.createElement('button');
                btn.className = 'btn-weight';
                btn.textContent = `${weight}g - ${price}‚Ç¨`;
                btn.onclick = () => selectWeight(weight, price);
                buttons.appendChild(btn);
            });

            document.getElementById('orderModal').style.display = 'block';
        }

        function selectWeight(weight, price) {
            selectedWeight = weight;
            selectedPrice = price;
            closeModal('orderModal');
            document.getElementById('addressModal').style.display = 'block';
        }

        function submitOrder() {
            const address = document.getElementById('addressInput').value.trim();
            const phone = document.getElementById('phoneInput').value.trim();

            if (!address || !phone) {
                tg.showAlert('‚ö†Ô∏è Remplis tous les champs');
                return;
            }

            const orderData = {
                product: currentProduct.product.name,
                weight: selectedWeight,
                price: selectedPrice,
                address: address,
                phone: phone,
                user: currentUser
            };

            // Send to bot via Telegram
            tg.sendData(JSON.stringify(orderData));

            closeModal('addressModal');
            tg.showAlert(`‚úÖ Ta commande pour ${currentProduct.product.name} a bien √©t√© envoy√©e √† l'admin pour validation.`);
            
            // Clear form
            document.getElementById('addressInput').value = '';
            document.getElementById('phoneInput').value = '';
            
            showHome();
        }

        function showAddStock() {
            document.getElementById('addStockModal').style.display = 'block';
        }

        function addProduct() {
            const category = document.getElementById('stockCategory').value;
            const name = document.getElementById('productName').value.trim();
            const image = document.getElementById('productImage').value.trim();
            const pricesStr = document.getElementById('productPrices').value.trim();
            const weightsStr = document.getElementById('productWeights').value.trim();
            const stockTotal = parseFloat(document.getElementById('productStock').value);

            if (!name || !image || !pricesStr || !weightsStr || !stockTotal) {
                tg.showAlert('‚ö†Ô∏è Remplis tous les champs');
                return;
            }

            try {
                const prices = pricesStr.split(',').map(p => parseFloat(p.trim()));
                const weights = weightsStr.split(',').map(w => parseFloat(w.trim()));

                if (prices.length !== 5 || weights.length !== 5) {
                    tg.showAlert('‚ö†Ô∏è Il faut exactement 5 prix et 5 poids');
                    return;
                }

                stock[category].push({
                    name,
                    image,
                    prices,
                    weights,
                    stock_total: stockTotal
                });

                saveStock();
                closeModal('addStockModal');
                tg.showAlert(`‚úÖ Stock ${category.toUpperCase()} mis √† jour avec succ√®s !`);

                // Clear form
                document.getElementById('productName').value = '';
                document.getElementById('productImage').value = '';
                document.getElementById('productPrices').value = '';
                document.getElementById('productWeights').value = '';
                document.getElementById('productStock').value = '';
            } catch (e) {
                tg.showAlert('‚ö†Ô∏è Format invalide');
            }
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }

        init();
    </script>
</body>
</html>
